<h2><%= I18n.t('devise.registration.new') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: resource } %>

  <div class="form-group buffer-top">
    <i class="bi bi-envelope-heart"></i>
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group buffer-top">
    <i class="bi bi-pen"></i>
    <%= f.label :password, class: "col-sm control-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        <%= t('devise.registration.password_length') %>)</em>
    <% end %>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group buffer-top">
    <i class="bi bi-pen-fill"></i>
    <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group buffer-top">
    <div class="col-sm-offset-2 col-sm-4">
      <div class="btn btn-success">
        <i class="bi bi-fire"></i>
        <%= f.submit t('devise.registration.new'), class: 'btn' %>
      </div>
    </div>

    <%= render 'devise/shared/links' %>
  </div>
<% end %>

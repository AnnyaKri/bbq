<h2><%= I18n.t('devise.passwords.forgot_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: resource } %>

  <div class="form-group buffer-top">
    <i class="bi bi-envelope-heart"></i>
    <%= f.label :email, class: 'col-sm control-label' %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="actions buffer-both">
    <%= f.submit t('devise.passwords.send_email'), class: 'btn btn-success' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

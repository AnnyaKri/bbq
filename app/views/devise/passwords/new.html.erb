<h2><%= t('devise.passwords.forgot_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: resource } %>

  <div class="form-group buffer-top">
    <%= f.label :email, class: 'col-sm control-label bi bi-envelope-heart' %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="actions buffer-both">
    <div class="btn btn-success bi bi-fire">
      <%= f.submit t('devise.passwords.send_email'), class: 'btn' %>
    </div>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

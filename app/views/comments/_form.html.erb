<%= form_for([@event, comment], data: { turbo: false }) do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: comment } %>

  <div class="buffer-bottom-forms">
    <div class="form-group buffer-both">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <% unless user_signed_in? %>
      <div class="form-group buffer-both">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: "form-control" %>
      </div>
    <% end %>

    <div class="actions buffer-top">
      <%= f.submit t('comments.form_submit'), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


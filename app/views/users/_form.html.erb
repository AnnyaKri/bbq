<%= form_for @user, data: { turbo: false }, html: { multipart: true } do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: @user } %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('views.link_submit'), class: 'btn btn-primary' %>
    или <%= link_to t('views.link_back'), :back %>
  </div>
<% end %>
